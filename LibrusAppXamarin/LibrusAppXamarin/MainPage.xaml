<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibrusAppXamarin.MainPage">

    <StackLayout BackgroundColor="Gray">
        <StackLayout Spacing="10" Padding="20">
            <Label Text="Login:" HorizontalOptions="CenterAndExpand"
                   FontSize="20"/>
            <Entry x:Name="login_entry"/>
            <Label Text="Haslo:" HorizontalOptions="CenterAndExpand"
                   FontSize="20"/>
            <Entry x:Name="haslo_entry"/>
            <Button Text="ZALOGUJ"
                    Clicked="LoginAndGoToMainPage"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
